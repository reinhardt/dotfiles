# class                  border   backgr.  text     indicator child_border
client.focused           $magenta $magenta $base2   $orange   $base2
client.unfocused         $base2   $base3   $base00  $magenta  $base2
client.focused_inactive  $base2   $base3   $magenta $violet   $base2

# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)
bar {
        status_command i3status
#        font pango:DejaVu Sans Mono for Powerline 10.5
    colors {
        focused_background $base2
        background $base3
        statusline $base0
        separator $base1

        # class            border  backgr. text
        focused_workspace  $magenta   $magenta   $base3
        active_workspace   $base2  $base3  $magenta
        inactive_workspace $base2  $base3  $base00
        urgent_workspace   $red    $red    $base00
        binding_mode       $cyan   $cyan   $base00
    }
}

